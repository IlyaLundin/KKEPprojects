<UserControl x:Class="CalendarNotes.UserControlEye"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalendarNotes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Name="ShowPassword" Height="90" Width="138">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Path Stroke="Black">
                        <Path.Fill>
                            <ImageBrush ImageSource="Resources/imgonline-com-ua-Resize-PvmLZ7DKaa.jpg"></ImageBrush>
                        </Path.Fill>
                        <Path.Data>
                            <EllipseGeometry RadiusX="69" RadiusY="45" Center="69,45">

                            </EllipseGeometry>

                        </Path.Data>

                    </Path>

                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</UserControl>
